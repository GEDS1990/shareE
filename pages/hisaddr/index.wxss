/* pages/wallet/index.wxss */
.choose{
	background-color: #fff;
}
.choose-grids{
	display: flex;
	flex-wrap: wrap;
	justify-content: space-around;
	padding: 50rpx;
}
.choose-grids .grid{
	width: 100%;
	height: 350rpx;
	margin-top: 36rpx;
	border-radius: 6rpx;
	line-height: 50rpx;
	text-align: center;
	border: 2rpx solid #191970;
}
.choose-grids .grid:first-child,
.choose-grids .grid:nth-of-type(2){
	margin-top: 10rpx;
}
.action .action-photo{
	background-color: #fff;
	padding: 40rpx 0px 40rpx 50rpx;
}
.action .action-photo image{
	position: relative;
	display: inline-block;
	width: 120rpx;
	height: 120rpx;
	overflow: visible;
	margin-left: 25rpx;
}
.action .action-photo image icon.del{
	display: block;
	position: absolute;
	top: -20rpx;
	right: -20rpx;
}
.action .action-photo text.add{
	display: inline-block;
	width: 120rpx;
	height: 120rpx;
	line-height: 120rpx;
	text-align: center;
	font-size: 24rpx;
	color: #ccc;
	border: 2rpx dotted #ccc;
	margin-left: 25rpx;
	vertical-align: top;
}
.action .action-input{
	padding-left: 50rpx;
	margin-top: 30rpx;
	background-color: #fff;
}
.action .action-input input{
	width: 90%;
	padding-top: 40rpx;
	padding-bottom: 40rpx;
}
.action .action-input input:first-child{
	border-bottom: 2rpx solid #ccc;
	padding-bottom: 20rpx;
}
.action .action-input input:last-child{
	padding-top: 20rpx;
}
.action .action-submit{
	padding: 40rpx 40rpx;
	background-color: #f2f2f2;
}
.address-info-text-title{
	display: block;
	text-align: left;
  width: 100%;
	padding: 30rpx 0;
	margin-bottom: 30rpx;
	margin-right: 30rpx;
}
.address-info-text{
	display: block;
	text-align: left;
	padding: 30rpx 0;
	font-size: 24rpx;
	margin-right: 20rpx;
	margin-bottom: 10rpx;
}
.tapbar{
  display: flex;
  flex-wrap:wrap;
  flex-direction:row;
  align-items: center;
	margin:33rpx auto 44rpx auto;
  width:555rpx;
  height:199rpx;
	text-align: left;
  background: linear-gradient(-18deg, #191970, #ccc);
  border-radius: 12rpx;
  font-size:30rpx;
}
.view1{
  display: flex;
  flex-wrap:wrap;
  flex-direction:row;
  align-items: center;
	text-align: right;
}
.my-text-ico {
  font-family:"iconfont" !important;
  font-size:40rpx;
  color: rgb(224, 195, 195);
  font-style:normal;
  -webkit-font-smoothing:antialiased;
  -moz-osx-font-smoothing:grayscale;
}
.address-info-text{
  font-family:"iconfont" !important;
  font-size:26rpx;
  font-style:normal;
  color: #fff;
  -webkit-font-smoothing:antialiased;
  -moz-osx-font-smoothing:grayscale;
}

<!--pages/hisaddr/add/index.wxml-->
<view class="container">
    <view class="action">
      <view class="action-input">
        <input bindinput="provinceChange" name="province" placeholder="省" />
        <input bindinput="cityChange" name="city" placeholder="市" />
        <input bindinput="addressChange" name="address" placeholder="详细地址" />
        <input bindinput="nameChange" name="name" placeholder="联系人" />
        <input bindinput="telChange" name="tel" placeholder="电话" />
      </view>
    </view>
    <!-- <map id="ShareEMap" latitude="{{latitude}}" longitude="{{longitude}}" scale="{{scale}}" bindregionchange="bindregionchange" polyline="{{polyline}}" controls="{{controls}}" bindmarkertap="bindmarkertap"  bindcontroltap="bindcontroltap" show-location/> -->
    
    <view class="action-submit">
        <button class="submit-btn" type="default" loading="{{loading}}" bindtap="formSubmit" style="background-color: {{btnBgc}};color: #fff;">确认</button>
    </view>
</view>


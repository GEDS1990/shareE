<!--pages/wallet/index.wxml-->
<view class="container">
    <view class="overage">
        <view>
            <text class="overage-header">我的余额（元）</text>
        </view>
        <view>
            <text class="overage-amount">{{money}}</text>
        </view>
        <view>
            <text bindtap="overageDesc" class="overage-desc">余额说明</text>
        </view>       
    </view>
    <button bindtap="movetoCharge" class="btn-charge">推荐好友获得e币</button>
    <view bindtap="showTicket" class="my-ticket tapbar">
        <text>优惠券</text>
        <text><text class="c-g">{{ticket}}张</text>></text>
    </view>
    <view bindtap="showDeposit" class="my-deposit tapbar">
        <text>E零钱提现</text>
        <text><text class="c-y">{{money}}元</text>></text>
    </view>
    <!-- <view bindtap="showCaipiao" class="my-deposit tapbar">
        <text>大乐透</text>
        <text><text class="c-y"></text>></text>
    </view> -->
</view>
